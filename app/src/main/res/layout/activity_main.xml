<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mm"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="150dp"
        android:text="   IP   "
        android:textColor="@color/red"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="350dp"
        android:text="Stream Port"
        android:textColor="@color/green"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="250dp"
        android:text="Socket PORT"
        android:textColor="@color/yellow"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/getIP"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginTop="140dp"
        android:text="192.168.137.177"
        android:textColor="@color/red"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/socketPort"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="240dp"
        android:text="9527"
        android:textColor="@color/blue"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/streamPort"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="340dp"
        android:text="8080"
        android:textColor="@color/pink"
        android:textSize="25sp" />

    <Button
        android:id="@+id/jmp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="480dp"
        android:background="@drawable/rand_circle"
        android:text="RUN"
        android:textColor="@color/blue"
        android:textSize="35sp" />

    <Button
        android:id="@+id/stream"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="650dp"
        android:background="@color/crs" />

    <Button
        android:id="@+id/newSockect"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="335dp"
        android:layout_marginTop="650dp"
        android:background="@color/crs" />
</RelativeLayout>